<style>
    .login-container {
        max-width: 360px;
        margin: auto;
        margin-top: 64px;
        padding: 32px;
        border-radius: 0.5em;
        border: 1px solid #bbb;
        background-color: #ccc;
    }
    
    .btn-100 {
        width: 100%;
        margin-bottom: 0.5em;
    }

    .a2 {
        color: #333;
    }

    .a2:hover {
        color: #000;
    }
</style>


<div class="login-container">
    <h1><b>CODERStore</b></h1>
    <h2><b>Login</b></h2>

    {{!-- Probar los 3 endpoints de login habilitados en auth.routes.js  --}}
    <form action="/api/auth/login_passport_jwt" method="post" style="margin-top: 32px;">
        <div class="input-group" style="width: 100%; margin-bottom: 8px;">
            <span class="input-group-text" id="group1"><i class="fa-solid fa-user"></i></span>
            <input type="email" name="email" class="form-control" placeholder="Email" required="required" autocomplete="email" autofocus="autofocus">
        </div>

        <div class="input-group" style="width: 100%; margin-bottom: 32px;">
            <span class="input-group-text" id="group2"><i class="fa-solid fa-lock"></i></span>
            <input type="password" name="pass" class="form-control" required="required" autocomplete="password">
        </div>

        <button type="submit" class="btn btn-success btn-100">Ingresar con usuario y clave</button>
        <button type="reset" class="btn btn-secondary btn-100" onclick="visit('/api/auth/github');"><i class="fa-brands fa-github"></i> Ingresar con Github</button>
        <button type="reset" class="btn btn-warning btn-100" onclick="visit('/api/auth/google');"><i class="fa-brands fa-google"></i> Ingresar con Google</button>

        {{#if msg}}
        <div style="margin-top: 24px;">
            <div class="alert alert-danger" role="alert">{{msg}}</div>
        </div>
        {{/if}}
        
        <div style="margin-top: 24px;">
            Olvidaste tu clave?: <a class="a2" href="/restore">Restaurar</a>
            <br />
            Aún no tenés cuenta?: <a class="a2" href="/register">Registrar</a>
        </div>
    </form>
</div>

<script>
    const visit = (destination) => {
        window.location.replace(destination);
    }
</script>